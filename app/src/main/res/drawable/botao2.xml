<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#A3838181"/>
            <corners android:radius="9dp"/>
            <stroke android:color="#DC015303" android:width="1dp"/>
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#C15A5C61"
                android:endColor="#F0737785"
                android:type="linear">
            </gradient>

            <stroke android:width="0dip" android:color="#2E2E2E"/>
            <corners android:radius="9dp"/>

        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#B5FAFAFA"/>
            <corners android:radius="11dp"/>
        </shape>
    </item>


</selector>