<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="381dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="381dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="381dp"
            android:background="@drawable/fundo_lista"
            android:clickable="true">

            <ImageView
                android:id="@+id/id_image"
                android:layout_width="32sp"
                android:layout_height="30sp"
                android:background="@drawable/countorno_lista"
                app:layout_constraintBottom_toBottomOf="@+id/id_titulo"
                app:layout_constraintEnd_toEndOf="@+id/id_titulo"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/id_titulo"
                app:layout_constraintTop_toTopOf="@+id/id_titulo"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/id_titulo"
                android:layout_width="255dp"
                android:layout_height="34dp"
                android:paddingLeft="9dp"
                android:background="@drawable/countorno_lista"
                android:paddingTop="5dp"
                android:textSize="17sp"
                android:text="Teste"
                app:layout_constraintBottom_toTopOf="@+id/id_dados"
                app:layout_constraintEnd_toEndOf="@+id/id_dados"
                app:layout_constraintHorizontal_bias="0.004"
                app:layout_constraintStart_toStartOf="@+id/id_dados"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.59">

            </TextView>

            <TextView
                android:id="@+id/id_dados"
                android:layout_width="380dp"
                android:layout_height="307dp"
                android:background="@drawable/fundo_texto_lista"
                android:paddingTop="19dp"
                android:textAlignment="center"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.774">

            </TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>